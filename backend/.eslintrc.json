{
  "env": {
    "node": true,
    "es6": true,
		"jest": true
  },
  "extends": ["eslint:recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "ignorePatterns": ["node_modules/"],
  "rules": {
		"indent": ["error", 2],
    "no-console": "off",
		"no-mixed-spaces-and-tabs": ["error", "smart-tabs"],
    "no-var": "error",
    "object-curly-spacing": ["error", "always"]
	}
}
