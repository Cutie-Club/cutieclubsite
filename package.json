  "scripts": {
    "db:start": "sudo systemctl start mariadb",
    "dev:backend": "cd backend/ && yarn dev:start",
    "dev:frontend": "cd frontend/ && yarn start",
    "lint:frontend": "cd frontend/ && npx eslint ./src/**/*.js",
    "lint:backend": "cd backend/ && npx eslint ./"
  },
  "devDependencies": {
    "pre-commit": "^1.2.2"
  },
  "pre-commit": {
    "silent": false,
    "run": [
      "lint:frontend",
      "lint:backend"
    ]
  }
